<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_black">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/explorerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_hover"
            android:clickable="true"
            android:contentDescription="@string/back"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginEnd="50dp"
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="middle"
            android:fontFamily="@font/trebuc"
            android:gravity="center|start"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/internal_storage"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/settings"
            android:background="@drawable/circular_hover"
            android:clickable="true"
            android:focusable="true"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="-50dp"
            android:text="@string/fa_cog"
            android:fontFamily="@font/font_awesome_regular"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/off_white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="51dp"
        android:id="@+id/explorerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_marginTop="51dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/message"
            android:fontFamily="@font/trebuc"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@color/off_white"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lockerButton"
        android:background="@drawable/rounded_back"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/circular_hover"
            android:id="@+id/cancelSelection"
            android:src="@drawable/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:contentDescription="@string/lock_icon" />

        <TextView
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/lockerText"
            android:fontFamily="@font/trebuc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lock_files"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>