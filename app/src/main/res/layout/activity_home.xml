<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_black"
    tools:context=".Pages.Home">

    <LinearLayout
        android:orientation="horizontal"
        android:elevation="2dp"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/midnight_black_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:background="@drawable/circular_hover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:id="@+id/menuButton"
            android:contentDescription="@string/menu" />

        <TextView
            android:fontFamily="@font/trebuc"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/vault"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:gravity="center|start"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:padding="15dp"
            android:background="@drawable/circular_hover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/key"
            android:id="@+id/key"
            android:contentDescription="@string/menu" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homePager"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <LinearLayout
        android:gravity="center"
        android:elevation="2dp"
        android:background="@color/midnight_black_button"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tabVault"
                android:focusable="true"
                android:clickable="true"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/fa_lock"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/trebuc"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/vault"
                android:id="@+id/vaultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tabApps"
                android:focusable="true"
                android:clickable="true"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/off_white"
                android:text="@string/fa_apps"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/trebuc"
                android:gravity="center"
                android:textColor="@color/off_white"
                android:text="@string/apps"
                android:id="@+id/appsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tabFiles"
                android:focusable="true"
                android:clickable="true"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/off_white"
                android:text="@string/fa_folder"
                android:fontFamily="@font/font_awesome_regular"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/trebuc"
                android:gravity="center"
                android:textColor="@color/off_white"
                android:text="@string/vault"
                android:id="@+id/filesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>