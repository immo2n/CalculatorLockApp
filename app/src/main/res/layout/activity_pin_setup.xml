<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_black"
    android:orientation="vertical"
    tools:context=".Pages.Calculator">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:gravity="center|start"
        android:text="@string/setup_pin"
        android:textColor="@color/white"
        android:fontFamily="@font/trebuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pinMessage"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:text="@string/enter_pin"
        android:textColor="@color/white"
        android:fontFamily="@font/trebuc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/pin_empty"
        android:gravity="bottom|end"
        android:textSize="35sp"
        android:fontFamily="@font/trebuc"
        android:textColor="@color/white"
        android:padding="20dp"
        android:id="@+id/display"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:padding="20dp"
        android:background="@color/midnight_black_button"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/allClear"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/ac"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/backSpace"
                    android:fontFamily="@font/font_awesome_regular"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/fa_backspace"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/parcent"
                    android:textStyle="bold"
                    android:textSize="27sp"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/divide"
                    android:fontFamily="@font/font_awesome_regular"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="@string/fa_divide"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num7"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_7"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num8"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_8"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num9"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_9"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/multiply"
                    android:fontFamily="@font/font_awesome_regular"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="@string/fa_multiply"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num4"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_4"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num5"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_5"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num6"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_6"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/subtract"
                    android:fontFamily="@font/font_awesome_regular"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="@string/fa_minus"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num1"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_1"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num2"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_2"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num3"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_3"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/addition"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="@string/addition"
                    android:textColor="@color/light_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/exp"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/e"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover"
                    android:id="@+id/num0"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/_0"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/circular_hover"
                    android:id="@+id/dot"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="@string/dot"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:focusable="true"
                    android:clickable="true"
                    android:background="@drawable/circular_hover_enter"
                    android:id="@+id/equal"
                    android:fontFamily="@font/trebuc"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="@string/equal"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>